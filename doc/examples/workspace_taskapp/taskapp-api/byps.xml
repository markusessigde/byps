<?xml version="1.0" encoding="UTF-8"?>
<project name="TaskApplication" default="build">

  <property name="byps.home" value="../byps-lib/java"/>
	
  <target name="build">

    <java jar="${byps.home}/bypsgen.jar" fork="true" >
			
      <!-- API definition from directoy … -->
      <arg value="--sourcepath"/><arg value="./src"/>

      <!-- Generate Java code into directory … -->
      <arg value="-genj.dir-ser"/>      <arg value="..\\taskapp-ser\\src-ser-j"/>

      <!-- Generate C# code into directory … -->
      <arg value="-gencs.dir-ser"/>     <arg value="..\\taskapp-ser\\src-ser-cs"/>
    
      <!-- Generate C++ code into directory … -->
      <arg value="-gencpp.dir-api"/>    <arg value="..\\taskapp-ser\\src-ser-cpp/api"/>
      <arg value="-gencpp.dir-impl"/>   <arg value="..\\taskapp-ser\\src-ser-cpp/impl"/>
      
      <!-- Generate JavaScript code into file … -->  
      <arg value="-genjs.dest"/>        <arg value="..\\taskapp-srv\\WebContent\\taskapp-ser.js"/>
						
    </java>
  </target>
</project>